{% trans_default_domain 'auth-google.admin' %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 400px;">

    {{ form_start(form) }}

    <div class="modal-content p-3 border-bottom border-5 border-primary">

        <div class="modal-header">
            <h5 class="modal-title">
                {{ 'page.edit'|trans }}
            </h5>
        </div>

        <div class="modal-body d-flex justify-content-center gap-3">

            <div class="flex-grow-1">
                <div class="d-flex radio-buttons justify-content-center" data-buttons="true">
                    <label class="btn p-2 border-dotted rounded-3 active">
                        <div class="d-flex align-items-center">
                            <div class="d-flex justify-content-center">
                                <span class="h5">
                                    <div class="form-check px-3 d-flex align-items-center">
                                        {{ form_widget(form.active.active, { label: 'Активен' }) }}
                                    </div>
                                </span>
                            </div>
                        </div>
                    </label>
                </div>
            </div>

        </div>

        <div class="modal-footer ">

            <div class="mt-3 gap-3 d-flex">
                {# Отмена #}
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>

                {# Сохранить #}
                {{ form_widget(form.account_google_newedit_form, { label: '
                    <span>'~ 'btn.save'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
			    '}) }}
            </div>
        </div>

    </div>

    {{ form_end(form) }}
</div>